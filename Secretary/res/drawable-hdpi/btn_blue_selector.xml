<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <solid android:color="#5893B5" />

            <corners android:radius="4dp" />

            <stroke android:dashWidth="0dp" android:width="0dp" />
        </shape></item>
    <item android:state_pressed="true"><shape> 
            <solid android:color="#2389ca" />

            <corners android:radius="4dp" />

            <stroke android:dashWidth="0dp" android:width="1dp" android:color="@android:color/white" />
        </shape></item>

</selector>