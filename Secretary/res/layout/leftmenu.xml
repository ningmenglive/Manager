<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff545454">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView 
                android:id="@+id/menu_img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/lpanel_ic_progresses_normal"/>"
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu_img1"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="动态"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView 
                android:id="@+id/menu_img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/lpanel_ic_projects_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu_img2"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="项目"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView 
                android:id="@+id/menu_img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/lpanel_ic_notifications_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu_img3"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="通知"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"/>"
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView 
                android:id="@+id/menu_img4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/lpanel_ic_projects_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu_img4"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="自己"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
